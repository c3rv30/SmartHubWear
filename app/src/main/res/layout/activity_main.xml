<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.blacklist.sync.MainActivitySync">

    <!-- Info Button-->
    <com.andexert.library.RippleView
        android:id="@+id/lkjhgfd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_without_border"
        rv_centered="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/info"/>
    </com.andexert.library.RippleView>

    <!-- manual Button -->
    <com.andexert.library.RippleView
        android:id="@+id/manual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_without_border"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignStart="@+id/estadisticas"
        android:onClick="ingreso_manual">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/admin"/>
    </com.andexert.library.RippleView>

    <!-- Sync Button -->
    <com.andexert.library.RippleView
        android:id="@+id/syncDB"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_without_border"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:onClick="syncDB">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cloud_refresh"/>
    </com.andexert.library.RippleView>

    <!-- Stadistic Button -->
    <com.andexert.library.RippleView
        android:id="@+id/estadisticas"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_without_border"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sta"/>
    </com.andexert.library.RippleView>

    <!-- Scan Button -->
    <com.andexert.library.RippleView
        android:id="@+id/scan"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle"
        rv_centered="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:src="@drawable/scan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />
        <!--
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
         -->
    </com.andexert.library.RippleView>
</RelativeLayout>